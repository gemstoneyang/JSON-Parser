{
	"version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
		{
            "label": "build (debug)",
            "type": "shell",
            "command": "make",
            "args": ["debug", "-j"]
